-
  var navList = [
    {
      text: '首页',
      href: '/',
      pageName: 'home'
    },
    {
      text: '关于我们',
      href: '/about',
      pageName: 'about'
    }
  ]

header(class="page-header")
  nav(class="navbar navbar-expand-md sticky-top navbar-dark rr-bg-800")
    div(class="container-fluid")
      a(class="navbar-brand" href="/") Red Romance
      button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
        span(class="navbar-toggler-icon")
      
      div(class="collapse navbar-collapse" id="navbarSupportedContent")
        ul(class="navbar-nav me-auto")
          each link in navList
            li(class="nav-item")
              if link.pageName === pageName
                a(class="nav-link active" href= link.href)= link.text
              else
                a(class="nav-link" href= link.href)= link.text

        div(class="d-flex")
          a(class="btn btn-warning btn-sm me-2" role="button" href="/admin/login") 登录
          a(class="btn btn-secondary btn-sm" role="button" href="/admin/signin") 申请入会